<%- layout('/layouts/boilerplate') -%>

<div class="container mt-3">
    <h1>Manage Connection Requests</h1>

    <% if (requests.length === 0) { %>
        <div class="alert alert-info mt-3">
            No connection requests at the moment.
        </div>
    <% } else { %>
        <div class="row">
            <% requests.forEach(request => { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= request.mentee.user.username %></h5>
                            <p><strong>Bio:</strong> <%= request.mentee.bio || "No bio provided" %></p>
                            <p><strong>Goals:</strong> <%= request.mentee.goals.join(", ") || "No goals listed" %></p>
                            <p><strong>Education Level:</strong> <%= request.mentee.educationLevel || "Not specified" %></p>
                            <div class="d-flex justify-content-between">
                                <form action="/mentor/requests/<%= request._id %>/accept" method="POST">
                                    <button type="submit" class="btn btn-success btn-sm">Accept</button>
                                </form>
                                <form action="/mentor/requests/<%= request._id %>/reject" method="POST">
                                    <input type="text" name="reason" placeholder="Reason for rejection" class="form-control form-control-sm mb-2">
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                                <form action="/mentor/requests/<%= request._id %>/ignore" method="POST">
                                    <button type="submit" class="btn btn-secondary btn-sm">Ignore</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
