<script>
  // Simulate typing effect for the mentor's name
  const mentorName = "John Doe"; // Replace with dynamic name logic
  let index = 0;
  const nameElement = document.getElementById("mentor-name");

  function typeEffect() {
    if (index < mentorName.length) {
      nameElement.textContent += mentorName.charAt(index);
      index++;
      setTimeout(typeEffect, 100); // Adjust typing speed
    }
  }

  typeEffect();
</script>