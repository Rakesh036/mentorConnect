<% layout("/mentor/layouts/boilerplate") -%>
<div class="container mt-5">
    <h2 class="text-center">User Profile</h2>

    <div class="profile-info">
        <h4>Username: <%= mentor.user.username %></h4>
        <h4>Role: <%= mentor.user.role %></h4>
        <h4>Expertise: <%= mentor.expertise.join(", ") %></h4>
        <h4>Years of Experience: <%= mentor.yearsOfExperience %></h4>
        <h4>Bio: <%= mentor.bio || 'No bio available' %></h4>
        <h4>LinkedIn: <a href="<%= mentor.linkedIn %>" target="_blank"><%= mentor.linkedIn %></a></h4>
        <h4>Twitter: <a href="<%= mentor.twitter %>" target="_blank"><%= mentor.twitter %></a></h4>
        <h4>GitHub: <a href="<%= mentor.github %>" target="_blank"><%= mentor.github %></a></h4>
        <h4>Portfolio: <a href="<%= mentor.portfolio %>" target="_blank"><%= mentor.portfolio %></a></h4>
    </div>

    <!-- Show edit and delete options if the logged-in user is the owner -->
    <% if (isOwner) { %>
        <div class="profile-actions mt-3">
            <a href="/mentor/profile/edit/<%= mentor.user._id %>" class="btn btn-primary">Edit Profile</a>
            <form action="/mentor/profile/delete/<%= mentor.user._id %>" method="POST" class="mt-2" onsubmit="return confirm('Are you sure you want to delete your profile?');">
                <button type="submit" class="btn btn-danger">Delete Profile</button>
            </form>
        </div>
    <% } %>

    
</div>
